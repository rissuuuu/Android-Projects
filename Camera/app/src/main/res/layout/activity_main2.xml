<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.risu.camera.Main2Activity">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:visibility="gone" />

    <Button
        android:id="@+id/select"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/gallery"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="254dp"
        android:layout_alignTop="@+id/upload"
        android:layout_toRightOf="@+id/camera"
        android:layout_toEndOf="@+id/camera"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp" />

    <Button
        android:id="@+id/upload"
        android:background="@drawable/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="upload"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="68dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/select"
        android:layout_toEndOf="@+id/select" />



    <EditText
        android:gravity="top|left"
        android:lines="6"
        android:minLines="1"
        android:maxLines="6"
        android:background="@drawable/menu"
        android:hint="Write your problem in short description"
        android:id="@+id/editText2"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_above="@+id/select"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sp_block"
        android:layout_alignLeft="@+id/upload"
        android:layout_alignStart="@+id/upload" />

    <TextView
        android:id="@+id/textView2"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sp_block"
        android:layout_alignEnd="@+id/editText2"
        android:layout_alignRight="@+id/editText2"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp" />

    <Button
        android:id="@+id/camera"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/camera"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />

</RelativeLayout>
