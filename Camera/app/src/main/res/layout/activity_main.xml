<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.risu.camera.MainActivity">
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sp_block"
        android:layout_above="@+id/block"
        android:layout_alignLeft="@+id/block"
        android:layout_alignStart="@+id/block"
        android:layout_marginBottom="13dp"></Spinner>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/block"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/room_no"
        android:layout_alignLeft="@+id/room_no"
        android:layout_alignStart="@+id/room_no" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/room_no"
        android:layout_above="@+id/editText2"
        android:layout_centerHorizontal="true" />

    <ImageView
          android:visibility="gone"
         android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         android:id="@+id/iv_image" />

    <Button
        android:id="@+id/select"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/camera"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="254dp"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_alignBottom="@+id/upload"
        android:layout_toLeftOf="@+id/upload"
        android:layout_toStartOf="@+id/upload" />

    <Button
        android:id="@+id/upload"
        android:background="@drawable/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="upload"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />

    <EditText
        android:foregroundGravity="center"
        android:background="@drawable/menu"
        android:id="@+id/et_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/iv_image"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="73dp"
        android:layout_marginRight="73dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:visibility="gone" />

    <EditText
        android:gravity="top|left"
        android:lines="6"
        android:minLines="1"
        android:maxLines="6"
        android:background="@drawable/menu"
        android:hint="Write your problem in short description"
        android:id="@+id/editText2"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_above="@+id/select"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:inputType="textMultiLine" />

</RelativeLayout>
